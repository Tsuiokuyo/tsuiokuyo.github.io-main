<article class="article well article-body" id="article-tags">
    <div class="breadcrumb">
        <i class="fa fa-home"></i>
        <a href="<%- config.url %>"><%= config.title %></a>
        >
        <span>標籤</span>
    </div>
    <!-- 大型設備詳細文章 -->
    <div class="hidden-xs">
        <div class="title-article">
            <h1>
                <a href="<%- url_for('tags') %>">標籤集合</a>
            </h1>
        </div>
    </div>
    <!-- 小型設備詳細文章 -->
    <div class="visible-xs">
        <center>
            <div class="title-article">
                <h4>
                    <a href="<%- url_for('tags') %>">標籤集合</a>
                </h4>
            </div>
        </center>
    </div>
    <div class="content-article" style="margin-top: 30px;">
        <div class="alert alert-info" style="font-size: 14px; line-height: 2; font-weight: bold;">
            <% site.tags.forEach(function (tag) { %>
            <a href="<%- url_for(tag.path) %>"><%= tag.name %></a>
            <br>
            <% }) %>
            <% if (site.tags.length === 0) { %>
            暫無標籤
            <% } %>
        </div>
    </div>
</article>